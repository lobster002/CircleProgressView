<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressView">
        <!-- 小文字文字大小(小圆圈里面的5,4,3,2,1)-->
        <attr name="smallTextSize" format="dimension|reference" />
        <!-- 圆环大小-->
        <attr name="ringStrokeWidth" format="dimension|reference" />
        <!-- 中间文字大小-->
        <attr name="textSize" format="dimension|reference" />
        <!-- 中间文字内容-->
        <attr name="textStr" format="string|reference" />
        <!-- 小圆圈半径大小(由于在进度到3,2,1的时候半径大小固定会出现超过边界的问题,详情查看onDraw里面的处理)-->
        <!-- 小文字文字颜色(小圆圈里面的5,4,3,2,1)-->
        <attr name="smallCircleRadius" format="dimension|reference" />
        <attr name="smallTextColor" format="color|reference" />
    </declare-styleable>
</resources>